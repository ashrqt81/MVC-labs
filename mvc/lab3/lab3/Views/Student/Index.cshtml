@model IEnumerable<Student>
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <a asp-action="create" asp-controller="Student" class="btn btn-success">Add</a>
    @if (Model.Count()>0)
    {
        <table class="table table-striped">
       <thead>
           <tr>
               <th>Id</th>
               <th>Name</th>
               <th>username</th>
               <th>Email</th>
               <th>Password</th>
               <th>age</th>
               <th>image</th>
               <th>Department</th>
               <th>Actions</th>
           </tr>
       </thead> 
       <tbody>
           
           @foreach(var item in Model){
           <tr>
               <td>@item.Id</td>
               <td>@item.Name</td>
               <td>@item.Username</td>
               <td>@item.Email</td>
               <td>@item.Password</td>
               <td>@item.age</td>
               <td>@item.StdImg</td>
               <td>@item.department?.Name</td>
              
               <td><a asp-action="details" asp-controller="Student" asp-route-id="@item.Id"class="btn btn-danger">Details</a></td>
               <td><a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id"class="btn btn-warning">Edit personal data</a></td>
               <td><a asp-action="EditUserName" asp-controller="Student" asp-route-id="@item.Id"class="btn btn-warning">Edit Login data</a></td>
                <td><a asp-action="EditImage" asp-controller="Student" asp-route-id="@item.Id"class="btn btn-warning">Edit image</a></td>
               <td><a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id"class="btn btn-primary">Delete</a></td>
           </tr>
           }

       </tbody>
   </table>
    }
    
</body>
</html>
